{% extends 'base.html.twig' %}

{% block title %}Yugioh{% endblock %}

{% block body %}
    {% if cards %}
        <table id="cards" class="table table-striped">
            <thead>
                <tr>
                    <th>Card Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for card in cards %}
                    <tr>
                        <td>{{ card.cardName }}</td>
                        <td>
                            <a href="/yugioh/{{ card.id }}" 
                            class="btn btn-info">Show</a>
                            <a href="/yugioh/edit/{{ card.id }}" 
                            class="btn btn-dark">Edit</a>
                            <a href="#" 
                            class="btn btn-danger delete-card"
                            data-id="{{ card.id }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No cards to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}